// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GameSession {
  id        String      @id @default(cuid())
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  games     Game[]      @relation("Games")
  highScore Int         @default(0)
}

model Game {
  id        String      @id @default(cuid())
  startedAt DateTime    @default(now())
  endedAt   DateTime?
  score     Int?
  validated Boolean     @default(false)
  session   GameSession @relation("Games", fields: [sessionId], references: [id])
  sessionId String
}

model HighScores {
  id            String      @id @default(cuid())
  score         Int   
  playerName    String   
  phoneNumber   String?   
  submittedAt   DateTime   
  SMS           SMS?        @relation("HighScores")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt 

  @@index(fields: [score(sort: Desc), submittedAt(sort: Asc)])
}

model Taunt {
  id            String      @id @default(cuid())
  text          String   
  SMS           SMS[]       @relation("Taunt")
}

model SMS {
  id            String      @id @default(cuid())
  phoneNumber   String
  fields        Json
  dateSent      DateTime?
  highScore     HighScores  @relation("HighScores", fields: [highScoreId], references: [id])
  highScoreId   String      @unique
  taunt         Taunt       @relation("Taunt", fields: [tauntId], references: [id])
  tauntId       String
}

